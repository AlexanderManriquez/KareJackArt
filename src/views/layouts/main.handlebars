<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{#if title}}{{title}}{{else}}Kare Jack Art{{/if}}</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      /* Minimal layout styles to make the admin views usable during development */
      body { font-family: Arial, Helvetica, sans-serif; margin: 0; padding: 0; background: #fafafa; color: #222 }
      header { background:#111; color:#fff; padding:12px 20px }
      header a { color: #fff; margin-right: 12px; text-decoration: none }
      main { padding: 20px; max-width: 1100px; margin: 0 auto }
      footer { padding: 12px 20px; text-align:center; color:#666; font-size:13px }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Inicio</a>
        <a href="/gallery">Galería</a>
        <a href="/login">Iniciar sesión</a>
      </nav>
    </header>

    <main>
      {{{body}}}
    </main>

    <footer>
      © {{year}} Kare Jack Art
    </footer>

    <script>
      // small helper to render current year in footer when layout is used directly
      (function(){
        try { var y = new Date().getFullYear(); document.body.innerHTML = document.body.innerHTML.replace('{{year}}', y); }catch(e){}
      })();
    </script>
  </body>
</html>
