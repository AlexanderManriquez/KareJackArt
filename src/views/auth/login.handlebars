<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/auth.css">

<main class="container" role="main">
  <section class="auth-panel" aria-labelledby="login-heading">
    <h1 id="login-heading">Iniciar sesión</h1>

    <form id="login-form" action="/api/auth/login" method="post" novalidate>
      <div class="form-row">
        <label for="email">Correo electrónico</label>
        <input id="email" name="email" type="email" required autocomplete="email" placeholder="tu@correo.com">
      </div>

      <div class="form-row">
        <label for="password">Contraseña</label>
        <input id="password" name="password" type="password" required autocomplete="current-password" placeholder="Contraseña">
      </div>

      <div class="form-row">
        <button type="submit" class="cta" id="login-submit" aria-live="polite">
          <span class="btn-text">Iniciar sesión</span>
          <span class="spinner" aria-hidden="true"></span>
        </button>
      </div>

      <div class="form-links">
        <a href="/register">Registrarse</a>
        <a href="/forgot">¿Olvidaste tu contraseña?</a>
      </div>

      <div id="login-error" class="visually-hidden" role="alert" aria-live="assertive"></div>
    </form>
  </section>
</main>

<script src="/js/auth.js" defer></script>
