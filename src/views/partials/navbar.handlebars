<header class="site-header">
  <div class="nav-inner">
    <div class="brand"><a href="/">Kare Jack Art</a></div>
    <nav class="nav-links" aria-label="Main navigation">
      <a href="/">Inicio</a>
      <a href="/gallery">Galería</a>
      <a href="/about">Acerca</a>
      {{#if currentUser}}
        <a href="/admin/dashboard">Dashboard</a>
        <form id="logout-form" action="/api/auth/logout" method="post" style="display:inline;">
          <button type="submit" class="cta" id="logout-button" aria-label="Cerrar sesión">
            <span class="btn-text">Cerrar sesión</span>
            <span class="spinner" aria-hidden="true"></span>
          </button>
        </form>
      {{else}}
        <a href="/login" class="cta" aria-label="Iniciar sesión">Iniciar sesión</a>
      {{/if}}
    </nav>
  </div>
</header>
