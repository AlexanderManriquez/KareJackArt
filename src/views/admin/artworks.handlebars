<div class="admin-artworks">
  <div class="container">
  <h1>Obras</h1>

  <div class="admin-top">
    <button id="openCreateForm" class="cta">Crear obra</button>
    <div id="message" class="admin-message"></div>
  </div>

  <table class="artworks-table">
    <thead>
      <tr><th>Mini</th><th>Título</th><th>Año</th><th>Slug</th><th>Acciones</th></tr>
    </thead>
    <tbody id="artworks-list">
      <tr><td colspan="5">Cargando...</td></tr>
    </tbody>
  </table>

  <!-- Modal form (hidden by default) -->
  <div id="artwork-form-modal" class="modal">
    <div class="modal-inner">
      <h2 id="modal-heading">Crear / Editar obra</h2>
      <form id="artworkForm" enctype="multipart/form-data">
    <div>
      <label for="title">Título</label>
      <input type="text" id="title" name="title" required />
    </div>

    <div>
      <label for="slug">Slug (opcional)</label>
      <input type="text" id="slug" name="slug" />
    </div>

    <div>
      <label for="description">Descripción</label>
      <textarea id="description" name="description" rows="4"></textarea>
    </div>

    <div>
      <label for="dimensions">Dimensiones</label>
      <input type="text" id="dimensions" name="dimensions" />
    </div>

    <div>
      <label for="year">Año</label>
      <input type="number" id="year" name="year" />
    </div>

    <div>
      <label for="isFeatured">Destacar</label>
      <input type="checkbox" id="isFeatured" name="isFeatured" />
    </div>

    <div>
      <label for="image">Imagen</label>
      <input type="file" id="image" name="image" accept="image/*" />
    </div>

    <div class="form-actions">
      <button type="submit" id="createArtworkBtn" class="cta">Guardar</button>
    </div>
      </form>
      <div class="modal-footer"><button type="button" id="closeModal" class="cta">Cerrar</button></div>
    </div>
  </div>

  <script src="/js/admin.artworks.js" defer></script>
  </div>
</div>
